<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_order_form_inherit_pricelist_control" model="ir.ui.view">
        <field name="name">sale.order.view.form.inherit</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <button name="action_confirm" id="action_confirm" class="btn-primary" invisible="state != 'sent'" position="replace">
                <field name="needs_manager_approval" invisible="1" />
                <button name="action_confirm" id="action_confirm" string="Confirmar" class="btn-primary" type="object" invisible="state not in ['sent'] or needs_manager_approval == True"/>
                
            </button>
            <button name="action_confirm"
            invisible="state != 'draft'" position="replace">
                <button name="action_confirm" string="Confirmar" type="object" invisible="state not in ['draft'] or needs_manager_approval == True"/>
                <button name="action_confirm" string="Confirmar" class="btn-primary" type="object" invisible="state not in ['draft','sent'] or (state in ['draft','sent'] and needs_manager_approval != True)" groups="sales_team.group_sale_manager"/>
            </button>
            <field name="pricelist_id" position="attributes">
                <attribute name="readonly">True</attribute>
            </field>
    </field>
    </record>

</odoo>
